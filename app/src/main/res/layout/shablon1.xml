<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fullbackgrgirl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="36dp"
android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:textAlignment="center"
android:text="Explore Together"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginHorizontal="10dp"
android:text="Create an account to run wild
through our curated experiences"/>
    <com.google.android.material.textfield.TextInputLayout
    android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="40dp"
    android:layout_height="wrap_content"

    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    app:boxCornerRadiusBottomEnd="25dp"
    app:boxBackgroundColor="@color/white"
    app:boxCornerRadiusBottomStart="25dp"
    app:boxCornerRadiusTopEnd="25dp"
    app:boxCornerRadiusTopStart="25dp"
    app:startIconDrawable="@drawable/group_goole"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:fontFamily="@font/sfprofont"
        android:text="Continue with Google"
        android:textSize="20dp"
        android:layout_height="wrap_content">


    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:boxBackgroundColor="@color/white"
        app:startIconDrawable="@drawable/apple_logo"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/sfprofont"
            android:text="Continue with Apple"
            android:textSize="20dp"

            android:layout_height="wrap_content">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        android:background="@color/white"
        app:startIconDrawable="@drawable/ic_launcheremail_foreground"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/sfprofont"
            android:text="Continue with Email"
            android:textSize="20dp"

            android:layout_height="wrap_content">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
<TextView
    android:textSize="15sp"
    android:textColor="@color/black"
    android:layout_marginBottom="10dp"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:text="Already have an account Log in"
    android:layout_height="wrap_content"/>
</LinearLayout>